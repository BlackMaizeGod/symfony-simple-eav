{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <table class="table" cellpadding="20px" style="width: 80%; margin: 50px auto; font-size: 22px; text-align: center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sku</th>
                <th>Price</th>
                <th>Qty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.sku }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.qty }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><a href="{{ path('product_new') }}">Create new</a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
